<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/step_list_card_size"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/id"
        android:layout_width="@dimen/iv_icon_size"
        android:layout_height="@dimen/iv_icon_size"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginStart="@dimen/text_margin"
        android:src="@drawable/ingredients_icon"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gather the Ingredients"
        android:layout_gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        android:gravity="center_vertical|start|left"
        android:layout_marginEnd="@dimen/padding_margin_8dp"
        android:layout_marginStart="@dimen/padding_margin_8dp"
        />
</LinearLayout>