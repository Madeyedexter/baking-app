<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="16dp">
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/exo_video"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_detail_views"
            android:layout_marginStart="@dimen/margin_detail_views"
            android:layout_marginRight="@dimen/margin_detail_views"
            android:layout_marginEnd="@dimen/margin_detail_views"
            android:layout_height="150dp"/>
        <ImageView
            android:id="@+id/iv_step_image"
            android:layout_marginLeft="@dimen/margin_detail_views"
            android:layout_marginStart="@dimen/margin_detail_views"
            android:layout_marginRight="@dimen/margin_detail_views"
            android:layout_marginEnd="@dimen/margin_detail_views"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_description"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="@dimen/margin_detail_views"
            android:layout_marginStart="@dimen/margin_detail_views"
            android:layout_marginRight="@dimen/margin_detail_views"
            android:layout_marginEnd="@dimen/margin_detail_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Melt the butter and bittersweet chocolate together in a microwave or a double boiler. If microwaving, heat for 30 seconds at a time, removing bowl and stirring ingredients in between."
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin_detail_views"
                android:layout_marginStart="@dimen/margin_detail_views"
                android:layout_marginBottom="32dp"
                app:elevation="6dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                app:pressedTranslationZ="2dp"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="@dimen/margin_detail_views"
                android:layout_marginEnd="@dimen/margin_detail_views"
                android:layout_marginBottom="32dp"
                android:elevation="6dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                app:pressedTranslationZ="2dp"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>
