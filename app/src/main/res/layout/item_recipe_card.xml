<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    android:layout_margin="@dimen/cardview_default_margin"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recipe_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_category"
            tools:src="@drawable/placeholder_category"
            />

        <TextView
            android:id="@+id/tv_recipe_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:padding="@dimen/text_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Nutella Pie" />

        <TextView
            android:id="@+id/tv_recipe_servings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="@dimen/text_padding"
            android:paddingBottom="@dimen/text_padding"
            android:text="@string/servings_value"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="Servings: %1$s" />
    </LinearLayout>

</android.support.v7.widget.CardView>